<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!-- chat-view.fxml -->

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.beginsecure.application_good.controller.ChatController">
    <center>
        <ListView fx:id="messageListView" />
    </center>
    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Type your message..." />
            <Button text="Send" onAction="#handleSendMessage" />
        </HBox>

    </bottom>
</BorderPane>
